<ul id="lists">
  <%@lists.each_with_index do |list, index| %>
    <% if list[:todos].all? {|todo| todo[:completed]} %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <a href="/lists/<%= index%>">
        <h2> <%= list[:name] %></h2>
         <p><%= list[:todos].size %></p>
        </a>
    </li>
  <% end%>
</ul>


<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
