<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li><a class = "delete" href="/lists/<%= params[:id]%>/destroy">Delete List</a></li>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:id]%>" method="post">
  <d1>
    <dt>
      <label for="list_name">New List Name:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name]%>">
    </dd>
  </d1>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id]%>">Cancel</a>
  </fieldset>
</form>
